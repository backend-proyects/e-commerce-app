{
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.5",
		"prettier": "^3.6.2"
	},
	"scripts": {
		"prepare": "husky",
		"lint": "eslint \"{packages,apps}/**/*.ts\"",
		"format": "prettier --write \"packages/**/*.ts\"",
		"test": "pnpm -r test",
		"build": "pnpm -r build"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
